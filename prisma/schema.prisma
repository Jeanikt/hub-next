generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id                     String                 @id @default(cuid())
  name                   String?
  email                  String?                @unique
  emailVerified          DateTime?
  image                  String?
  password               String?
  username               String?                @unique
  riotAccount            String?
  riotId                 String?
  tagline                String?
  rank                   String?
  primaryRole            String?
  secondaryRole          String?
  xp                     Int                    @default(0)
  elo                    Int                    @default(0)
  level                  Int                    @default(1)
  isAdmin                Boolean                @default(false)
  isBanned               Boolean                @default(false)
  bannedUntil            DateTime?
  banReason              String?
  isOnline               Boolean                @default(false)
  lastLoginAt            DateTime?
  onboardingCompleted    Boolean                @default(false)
  onboardingSkipped      Boolean                @default(false)
  onboardingCompletedAt  DateTime?
  profileBackgroundUrl   String?
  favoriteChampion       String?
  bestWinrateChampion    String?
  inviteCode             String?                @unique
  createdAt              DateTime               @default(now())
  updatedAt              DateTime               @updatedAt
  accounts               Account[]
  articles               Article[]
  friendMessagesReceived FriendMessage[]        @relation("MessageReceiver")
  friendMessagesSent     FriendMessage[]        @relation("MessageSender")
  friendsReceived        Friend[]               @relation("FriendReceiver")
  friendsSent            Friend[]               @relation("FriendRequester")
  matchParticipants      GameMatchUser[]
  createdMatches         GameMatch[]            @relation("MatchCreator")
  lobbyMessages          LobbyMessage[]
  notifications          Notification[]
  profileLikesReceived   ProfileLike[]          @relation("ProfileLikesReceived")
  profileLikesSent       ProfileLike[]          @relation("ProfileLikesSent")
  queueEntries           QueueEntry?
  referredBy             Referral?              @relation("ReferredBy")
  referralsSent          Referral[]             @relation("ReferralsSent")
  reports                Report[]
  sessions               Session[]
  supportTicketMessages  SupportTicketMessage[]
  supportTickets         SupportTicket[]
  missionsCompleted      UserMission[]

  @@map("users")
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  type      String
  title     String
  body      String?
  readAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, readAt])
  @@map("notifications")
}

model Mission {
  id          String        @id @default(cuid())
  title       String
  description String?
  type        String
  xpReward    Int           @default(0)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  completions UserMission[]

  @@index([type, isActive])
  @@map("missions")
}

model UserMission {
  id          String   @id @default(cuid())
  userId      String
  missionId   String
  completedAt DateTime @default(now())
  mission     Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, missionId])
  @@index([userId])
  @@index([missionId])
  @@map("user_missions")
}

model ProfileLike {
  id           String   @id @default(cuid())
  userId       String
  targetUserId String
  createdAt    DateTime @default(now())
  targetUser   User     @relation("ProfileLikesReceived", fields: [targetUserId], references: [id], onDelete: Cascade)
  user         User     @relation("ProfileLikesSent", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetUserId])
  @@index([targetUserId])
  @@map("profile_likes")
}

model QueueEntry {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  queueType String
  joinedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([queueType])
  @@map("queue_entries")
}

model GameMatch {
  id            Int             @id @default(autoincrement())
  matchId       String          @unique
  type          String
  status        String          @default("pending")
  map           String?
  maxPlayers    Int             @default(10)
  settings      String?
  creatorId     String?
  scheduledAt   DateTime?
  startedAt     DateTime?
  finishedAt    DateTime?
  winnerTeam    String?
  matchDuration Int?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  participants  GameMatchUser[]
  creator       User?           @relation("MatchCreator", fields: [creatorId], references: [id])
  lobbyMessages LobbyMessage[]

  @@index([status])
  @@index([type])
  @@map("game_matches")
}

model GameMatchUser {
  id          Int       @id @default(autoincrement())
  gameMatchId Int
  userId      String
  team        String?
  role        String?
  kills       Int       @default(0)
  deaths      Int       @default(0)
  assists     Int       @default(0)
  score       Int       @default(0)
  joinedAt    DateTime? @default(now())
  gameMatch   GameMatch @relation(fields: [gameMatchId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([gameMatchId, userId])
  @@index([userId])
  @@map("game_match_user")
}

model Friend {
  id        Int      @id @default(autoincrement())
  /// ID de quem enviou o pedido (mapeado para coluna legacy snake_case "user_id")
  userId    String   @map("user_id")
  /// ID de quem recebeu o pedido (mapeado para coluna legacy snake_case "friend_id")
  friendId  String   @map("friend_id")
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  friend    User     @relation("FriendReceiver", fields: [friendId], references: [id], onDelete: Cascade)
  user      User     @relation("FriendRequester", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId])
  @@index([friendId])
  @@map("friends")
}

model FriendMessage {
  id         Int       @id @default(autoincrement())
  senderId   String
  receiverId String
  content    String
  readAt     DateTime?
  createdAt  DateTime  @default(now())
  receiver   User      @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  sender     User      @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([senderId, receiverId])
  @@index([receiverId])
  @@map("friend_messages")
}

model LobbyMessage {
  id          Int       @id @default(autoincrement())
  gameMatchId Int
  userId      String
  content     String
  createdAt   DateTime  @default(now())
  gameMatch   GameMatch @relation(fields: [gameMatchId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([gameMatchId])
  @@map("lobby_messages")
}

model SupportTicket {
  id                    String                 @id @default(cuid())
  userId                String
  subject               String
  body                  String
  status                String                 @default("open")
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  supportTicketMessages SupportTicketMessage[]
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("support_tickets")
}

model Report {
  id         String   @id @default(cuid())
  userId     String
  targetType String
  targetId   String
  reason     String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("reports")
}

model Referral {
  id            String   @id @default(cuid())
  inviterId     String
  invitedUserId String   @unique
  inviteCode    String
  createdAt     DateTime @default(now())
  invitedUser   User     @relation("ReferredBy", fields: [invitedUserId], references: [id], onDelete: Cascade)
  inviter       User     @relation("ReferralsSent", fields: [inviterId], references: [id], onDelete: Cascade)

  @@index([inviterId])
  @@index([inviteCode])
  @@map("referrals")
}

model Article {
  id       String   @id @default(cuid())
  authorId String
  title    String
  content  String
  category String
  fixed    Boolean?
  user     User     @relation(fields: [authorId], references: [id], onDelete: NoAction)

  @@index([authorId])
  @@map("articles")
}

model SupportTicketMessage {
  id        String        @id @default(cuid())
  userId    String
  ticketId  String
  content   String
  timestamp DateTime      @default(now())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: NoAction)

  @@index([ticketId, timestamp])
  @@index([userId, timestamp])
  @@map("support_ticket_messages")
}

